{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["esnext"],
    "target": "es2018",
    "moduleResolution": "node",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@corona-dashboard/*": ["./*/src"]
    },
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve"
  }
}
