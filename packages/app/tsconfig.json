{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "es5",
    "allowJs": false,
    "noEmit": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "references": [{ "path": "../common" }],
  "exclude": ["node_modules", ".next", "out"],
  "include": ["next-env.d.ts", "src"]
}
