{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "vr_collection_situations",
  "additionalProperties": false,
  "required": [
    "date_start_unix",
    "date_end_unix",
    "date_of_insertion_unix",
    "vrcode",
    "has_sufficient_responses",
    "home_and_visits",
    "work",
    "school_and_day_care",
    "health_care",
    "gathering",
    "travel",
    "hospitality",
    "other"
  ],
  "properties": {
    "date_start_unix": {
      "type": "integer"
    },
    "date_end_unix": {
      "type": "integer"
    },
    "date_of_insertion_unix": {
      "type": "integer"
    },
    "vrcode": {
      "type": "string",
      "pattern": "^VR[0-9]+$"
    },
    "has_sufficient_responses": {
      "type": "boolean"
    },
    "home_and_visits": {
      "type": ["number", "null"]
    },
    "work": {
      "type": ["number", "null"]
    },
    "school_and_day_care": {
      "type": ["number", "null"]
    },
    "health_care": {
      "type": ["number", "null"]
    },
    "gathering": {
      "type": ["number", "null"]
    },
    "travel": {
      "type": ["number", "null"]
    },
    "hospitality": {
      "type": ["number", "null"]
    },
    "other": {
      "type": ["number", "null"]
    }
  }
}
