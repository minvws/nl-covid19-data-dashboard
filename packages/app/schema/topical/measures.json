{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "topical_measures",
  "additionalProperties": false,
  "required": ["title", "dynamicSubtitle", "icon", "measureTiles"],
  "properties": {
    "title": {
      "type": "string"
    },
    "dynamicSubtitle": {
      "type": "string"
    },
    "icon": {
      "type": "string",
      "enum": ["icon-1", "icon-2"]
    },
    "measureTiles": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "measure_tile.json"
      }
    }
  }
}
