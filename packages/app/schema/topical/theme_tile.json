{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "topical_theme_tile",
  "type": "object",
  "additionalProperties": false,
  "required": ["title", "dynamicDescription", "trendIcon", "tileIcon", "cta"],
  "properties": {
    "title": {
      "type": "string"
    },
    "dynamicDescription": {
      "type": "string"
    },
    "trendIcon": {
      "type": ["object", "null"],
      "required": ["direction", "color"],
      "additionalProperties": false,
      "properties": {
        "direction": {
          "type": "string",
          "enum": ["up", "down", "forward"]
        },
        "color": {
          "type": "string",
          "enum": ["green", "red"]
        }
      }
    },
    "tileIcon": {
      "type": "string",
      "enum": ["icon-1", "icon-2"]
    },
    "cta": {
      "type": ["object", "null"],
      "required": ["label", "href"],
      "additionalProperties": false,
      "properties": {
        "label": {
          "type": "string"
        },
        "href": {
          "type": "string"
        }
      }
    }
  }
}
