{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "topical_theme",
  "type": "object",
  "additionalProperties": false,
  "required": ["title", "dynamicSubtitle", "icon", "themeTiles", "moreLinks"],
  "properties": {
    "title": {
      "type": "string"
    },
    "dynamicSubtitle": {
      "type": "string"
    },
    "icon": {
      "type": "string",
      "enum": ["icon-1", "icon-2"]
    },
    "themeTiles": {
      "type": "array",
      "minItems": 1,
      "maxItems": 3,
      "items": {
        "$ref": "theme_tile.json"
      }
    },
    "moreLinks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "link.json"
      }
    }
  }
}
