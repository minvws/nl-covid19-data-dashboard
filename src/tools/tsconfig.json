{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["esnext"],
    "allowJs": false,
    "skipLibCheck": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "typeRoots": ["../../node_modules/@types"]
  },
  "exclude": ["node_modules", ".next", "out", "cypress"],
  "include": ["**/*.ts", "**/*.tsx", "**/*.js"]
}
